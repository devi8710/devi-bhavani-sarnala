#include<stdio.h>
int main()
{
	int a[100];
	int n;
	int i;
	int *ptr=&a[0];
	printf("\n Enter the size of the array");
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		printf("Enter the values");
		scanf("%d",(ptr+i));
		
	}
	printf("/n The array elements are /n");
	for(i=0;i<n;i++)
	{
		printf("%d",*(ptr+i));
	}
	return 0;

}
